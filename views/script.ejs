<script>
  function validateForm() {
    const fileInput = document.getElementById('file')
    const alertError = document.getElementById('error')
    if (fileInput.value == "") {
      alertError.classList.replace('btn-outline-info', 'btn-outline-danger')
      alertError.innerHTML = "Por favor, selecione um arquivo!"

      setTimeout(() => {
        alertError.classList.replace('btn-outline-danger', 'btn-outline-info')
        alertError.innerHTML = `Compartilhar
              <span>
                <svg xmlns="http://www.w3.org/2000/svg" height="16" width="14" viewBox="0 0 448 512">
                  <path
                    d="M246.6 9.4c-12.5-12.5-32.8-12.5-45.3 0l-128 128c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0L192 109.3V320c0 17.7 14.3 32 32 32s32-14.3 32-32V109.3l73.4 73.4c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3l-128-128zM64 352c0-17.7-14.3-32-32-32s-32 14.3-32 32v64c0 53 43 96 96 96H352c53 0 96-43 96-96V352c0-17.7-14.3-32-32-32s-32 14.3-32 32v64c0 17.7-14.3 32-32 32H96c-17.7 0-32-14.3-32-32V352z" />
                </svg>
              </span>`

      }, 5000)

      return false
    }
    return true
  }

  function copyLink() {
    let copyText = document.querySelector('.alert-link')
    let range = document.createRange()
    range.selectNode(copyText)

    getSelection().removeAllRanges()
    getSelection().addRange(range)

    document.execCommand('copy')

    getSelection().removeAllRanges()

    document.querySelector('.copy').innerHTML = "COPIADO!"

    setTimeout(() => {
      document.querySelector('.copy').innerHTML = "COPIAR"
    }, 5000)
  }

  function validatePass() {
    const password = document.getElementById('password')
    const alertError = document.getElementById('error')
    if (password.value == "") {
      alertError.classList.replace('btn-outline-info', 'btn-outline-danger')
      alertError.innerHTML = "Por favor, digite a senha!"

      setTimeout(() => {
        alertError.classList.replace('btn-outline-danger', 'btn-outline-info')
        alertError.innerHTML = `Download
              <span>
                <svg xmlns="http://www.w3.org/2000/svg" height="16" width="16" viewBox="0 0 512 512">
                  <path
                    d="M256 0a256 256 0 1 0 0 512A256 256 0 1 0 256 0zM376.9 294.6L269.8 394.5c-3.8 3.5-8.7 5.5-13.8 5.5s-10.1-2-13.8-5.5L135.1 294.6c-4.5-4.2-7.1-10.1-7.1-16.3c0-12.3 10-22.3 22.3-22.3l57.7 0 0-96c0-17.7 14.3-32 32-32l32 0c17.7 0 32 14.3 32 32l0 96 57.7 0c12.3 0 22.3 10 22.3 22.3c0 6.2-2.6 12.1-7.1 16.3z" />
                </svg>
              </span>`

      }, 5000)

      return false
    }
    return true
  }

  const alertElement = document.getElementById('alert')
  if (alertElement) {
    setTimeout(function () {
      alertElement.classList.replace("show", "hide")
    }, 5000)
  }
</script>